{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "composite": true,
        "incremental": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@depsentinel/core": [
                "./core/src"
            ],
            "@depsentinel/cli": [
                "./cli/src"
            ],
            "@depsentinel/integrations": [
                "./integrations/src"
            ],
            "@depsentinel/agents": [
                "./agents/src"
            ],
            "@depsentinel/ui": [
                "./ui"
            ],
            "@depsentinel/server": [
                "./server/src"
            ],
            "@depsentinel/shared": [
                "./shared"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}